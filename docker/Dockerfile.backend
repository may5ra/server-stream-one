# Backend API - Node.js/Express
FROM node:20-alpine

WORKDIR /app

# Install FFmpeg for re-streaming IP-protected sources
RUN apk add --no-cache ffmpeg

# Install dependencies
COPY docker/backend/package.json ./
RUN npm install --omit=dev

# Copy backend code
COPY docker/backend/ ./

EXPOSE 3001
CMD ["node", "server.js"]
